<script type=javaScript/text>
// A simple calculator program by Adoga Sunday Owoicho
let result;

// Accept input from user
let operator = prompt('Enter an operator type to use ( either +, -, *, / ): ');

// take the operand input
var firstNumber = parseFloat(prompt('Enter the 1st number: '));
var secondNumber = parseFloat(prompt('Enter the 2nd number: '));

switch(operator) {
    case '+':
         result = firstNumber + secondNumber;
        console.log('${firstNumber} + ${secondNumber} = ${result}');
        break;

    case '-':
         result = firstNumber - secondNumber;
        console.log('${firstNumber} - ${secondNumber} = ${result}');
        break;

    case '*':
         result = firstNumber * secondNumber;
        console.log('${firstNumber} * ${secondNumber} = ${result}');
        break;

    case '/':
         result = firstNumber / secondNumber;
        console.log('${firstNumber} / ${secondNumber} = ${result}');
        break;

    default:
        console.log('You have entered and invalid operator');
        break;
}
</script>
